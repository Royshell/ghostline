{
  "name": "ghostline-canvas",
  "version": "0.1.0",
  "description": "Vue 3 wrapper for GhostLine - canvas drawing with ghost trail effects",
  "author": "Roy Shell",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Royshell/ghostline.git",
    "directory": "packages/vue"
  },
  "keywords": [
    "vue",
    "vue3",
    "canvas",
    "drawing",
    "signature",
    "ghost-trail"
  ],
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": false,
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {
    "vue": ">=3.3.0"
  },
  "dependencies": {
    "@royshell/ghostline-core": "workspace:*"
  },
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --clean",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch --clean",
    "clean": "rimraf dist",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "prepublishOnly": "pnpm run build"
  }
}
